<%- include ../partials/header_Sketchy.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <header><h1><%= title %></h1></header>
            <section>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Name"
                    name="name" 
                    value="<%= contact.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="contactNumberTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="contactNumberTextField"
                    placeholder="Enter Contact Number"
                    name="contactNumber" 
                    value="<%= contact.contactNumber %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailAddressTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="emailAddressTextField"
                    placeholder="Enter Email Address"
                    name="emailAddress" 
                    value="<%= contact.emailAddress %>"
                    required>
                </div>

                
                <div class="form-group">
                    <label for="messageTextArea">Message</label>
                    <textarea type="text" class="form-control"
                    id="messageTextArea"
                    placeholder="Enter Message"
                    name="message" 
                    required>
                    <%= contact.message %>
                    </textarea>
                </div>
                

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/contact-list/delete/<%= contact._id %>" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete</a>

                        <a href="/contact-list" class="btn btn-warning">
                            <i class="fas fa-undo"></i> Cancel</a>    

            </form>
        </section>
        </div>

    </div>
</div>




<%- include ../partials/bottom_nav.ejs %>  
 

